<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.alo.eparts.CustomLinearLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="50dp"
        android:orientation="vertical">
<!--        <com.google.android.material.card.MaterialCardView-->
<!--            android:id="@+id/card"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="8dp"-->
<!--            android:backgroundTint="@color/cardview_shadow_end_color">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Media -->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STANDARD"
                        android:textColor="#0070DF"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/diamond"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:lineHeight="15dp"
                        android:id="@+id/item_text"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Subscription"
                        android:textColor="#43464B"
                        android:textSize="15dp"
                        android:layout_gravity="center"

                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:lineHeight="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free"
                        android:textColor="#43464B"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:lineHeight="20dp"
                        />
                </LinearLayout>


                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Package Type"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#A8A8A8"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"

                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#43464B"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STANDARD"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#43464B"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Number of Users"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#A8A8A8"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"

                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#A8A8A8"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 Users"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#43464B"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#A8A8A8"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"

                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#A8A8A8"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#43464B"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Expiry Date"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#A8A8A8"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"

                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#43464B"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24-Sep-2021"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="15dp"
                            android:textColor="#43464B"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Features"
                    android:textColor="#43464B"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:lineHeight="15dp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Management Basic Dashboard Basic Reports"
                    android:textColor="#43464B"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:lineHeight="15dp"

                    />
                <Button
                    android:id="@+id/Upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                   android:backgroundTint="#0070DF"
                    android:text="Upgrade"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>

<!--        </com.google.android.material.card.MaterialCardView>-->
<!--        <TextView-->
<!--            android:id="@+id/item_text"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="16dp"-->
<!--            android:visibility="invisible"/>-->


    </com.alo.eparts.CustomLinearLayout>
</LinearLayout>