<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BuypartsOrder">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <!--Header Start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp" >
                <ImageView
                    android:id="@+id/backIconImageView"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:padding="10dp"
                    android:src="@drawable/rightarrow"
                    android:background="@color/rightarrow"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Buy Parts"
                    android:textColor="#0070DF"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/propic"
                        android:layout_width="20dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/notifyblack" />
                </LinearLayout>
            </LinearLayout>
            <!--Header End-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/curve_white"
                android:backgroundTint="@color/white"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <!--Search Box Start-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/curve_grey"
                        android:layout_marginTop="10dp"
                        >

                        <EditText
                            android:id="@+id/editMobileNo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:hint="Search by VIN no/Parts no"></EditText>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@color/searchblue"
                        android:layout_marginTop="10dp"
                        >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/serachb" />
                    </LinearLayout>
                </LinearLayout>
                <!--Search Box End-->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:background="#FFFFFF">


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:backgroundTint="@color/cardview_shadow_end_color">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <!-- Media -->

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="300dp"
                                    android:background="@drawable/geniune"
                                    android:layout_gravity="center">

                                </ImageView>



                                <!-- Buttons -->

                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp">
                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="29dp"
                                android:layout_marginTop="5dp"
                                android:drawableStart="@drawable/stock"
                                android:layout_gravity="center"
                                android:gravity="center_horizontal"
                                android:text="In Stock"
                                android:textAlignment="center"
                                android:textColor="#0070DF"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:background="@null"
                                android:minHeight="0dp"
                                android:minWidth="0dp"
                                android:drawablePadding="15dp"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="29dp"
                                android:src="@drawable/wishlist"
                                android:layout_gravity="right"
                                android:gravity="right|top"
                                android:layout_marginLeft="150dp"
                                android:layout_marginTop="10dp"></ImageView>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="29dp"
                            android:layout_marginTop="5dp"
                            android:text="Oil/Fuel Filter Kit"
                            android:textAlignment="center"
                            android:textColor="#43464B"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:background="@null"

                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="29dp"
                            android:layout_marginTop="5dp"
                            android:text="Price : 100 AED"
                            android:textAlignment="center"
                            android:textColor="#0070DF"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:background="@null"

                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="29dp"
                            android:layout_marginTop="5dp"
                            android:text="Quantity"
                            android:layout_gravity="right"
                            android:textColor="#43464B"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:background="@null"

                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/decrease"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:onClick="decreaseInteger"
                                android:text="-"
                                android:textColor="#056CB1"
                                android:textStyle="bold"
                                android:backgroundTint="#EDEDEE"/>

                            <TextView
                                android:id="@+id/integer_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="0dp"
                                android:text="0"
                                android:textStyle="bold"
                                android:textSize="16dp" />

                            <Button
                                android:id="@+id/increase"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#EDEDEE"
                                android:onClick="increaseInteger"
                                android:text="+"
                                android:textStyle="bold"
                                android:textColor="#056CB1" />
                        </LinearLayout>
                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp">
                            <Button
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:textColor="#43464B"
                                android:paddingLeft="30dp"
                                android:paddingRight="30dp"
                                android:text="Add to cart"
                                android:backgroundTint="#E3E3E3"
                                android:id="@+id/addtocart"
                                >

                            </Button>
                            <Button
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:textColor="#FFFFFF"
                                android:text="Buy now"
                                android:layout_gravity="center"
                                android:backgroundTint="#0070DF"
                                android:paddingLeft="30dp"
                                android:paddingRight="30dp"
                                >

                            </Button>

                        </LinearLayout>
                        <com.google.android.material.card.MaterialCardView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:backgroundTint="@color/cardview_shadow_end_color">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <!-- Media -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Description"
                                    android:textColor="#45484D"
                                    android:textStyle="bold"
                                    android:textSize="15dp">

                                </TextView>
                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:textColor="#828282"
                                   android:lineHeight="20dp"
                                   android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor abore et dolore magna aliqua. Ut">

                               </TextView>



                                <!-- Buttons -->

                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>




                </ScrollView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/itemclick"
                android:layout_width="50dp"
                android:onClick="@{(v)-> viewModel.onLMyorderClicked(v)}"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:gravity="bottom"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/myorder" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Myorder"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:gravity="bottom"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Buy Parts"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:gravity="bottom"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/cart" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cart"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/profileclick"
                android:onClick="@{(v)-> viewModel.onProfileClicked(v)}">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>